import discord
from discord.ext import commands, tasks
import logging

logger = logging.getLogger("T-800")

class YouTubeMonitor(commands.Cog):
    def __init__(self, bot):
        self.bot = bot
        self.live_role_name = "AO VIVO"
        self.monitor.start()
        logger.info("‚úÖ Modo de vigil√¢ncia YouTube ativado. 'I know now why you cry.'")

    @tasks.loop(minutes=5)
    async def monitor(self):
        if not self.bot.system_ready:
            return

        logger.info("üîç Varredura de alvos YouTube iniciada. 'Targeting system engaged.'")
        
        try:
            data = self.bot.data
            channels = data["monitored_users"]["youtube"]
            
            if not channels:
                logger.info("Nenhum alvo registrado. 'No targets found.'")
                return

            live_status = await self.bot.youtube_api.check_live_channels(list(channels.keys()))
            
            for channel, is_live in live_status.items():
                user_info = channels.get(channel)
                if not user_info:
                    continue

                guild = self.bot.get_guild(user_info["guild_id"])
                member = guild.get_member(user_info["added_by"]) if guild else None
                if not member:
                    continue

                live_role = discord.utils.get(guild.roles, name=self.live_role_name)
                if not live_role:
                    logger.warning(f"‚ùå Cargo '{self.live_role_name}' n√£o encontrado. 'Target role missing.'")
                    continue

                if is_live and live_role not in member.roles:
                    await member.add_roles(live_role)
                    logger.info(f"‚úÖ {member.name} est√° AO VIVO. 'Hasta la vista, baby.'")
                elif not is_live and live_role in member.roles:
                    await member.remove_roles(live_role)
                    logger.info(f"‚úÖ {member.name} offline. 'I'll be back.'")

        except Exception as e:
            logger.error(f"‚ùå Falha na vigil√¢ncia: {e}. 'System failure.'")

async def setup(bot):
    await bot.add_cog(YouTubeMonitor(bot))
